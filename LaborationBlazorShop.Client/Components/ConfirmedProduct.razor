@using LaborationBlazorShop.Client.DTOs

<div>
    <div class="media-img-wrapper mr-2">
        <img class="media-img" style="width:100px; height:100px;" src="@ProductInfo.Image" alt="@ProductInfo.Title" />
    </div>
    <div class="media-body">
        <h4 class="mb-0">@ProductInfo.Title</h4>
        @if (ProductInfo.OriginalPrice > ProductInfo.Price)
        {
            <h6 class="text-muted text-decoration-line-through">@(($"{ProductInfo.OriginalPrice * ExchangeRate:0.00} {ProductInfo.SelectedCurrency}"))</h6>
        }
        <h5 class="price">
            @(($"{ProductInfo.Price * ExchangeRate:0.00} {ProductInfo.SelectedCurrency}"))
        </h5>
        <h6>Quantity: @Quantity</h6>
    </div>
</div>

@code {

    [Parameter]
    public ProductDTO ProductInfo { get; set; }

    [Parameter]
    public decimal ExchangeRate { get; set; }

    [Parameter]
    public string SelectedCurrency { get; set; }

    [Parameter]
    public int Quantity { get; set; }
}
